@model TestedaApplication.Models.RegisterUser
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <form asp-area="" asp-controller="Account" asp-action="Register" class="form-signin" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
        <div asp-validation-summary="All"></div>

        <div class="text-center mb-4">
            <h1 class="h3 mb-3 font-weight-normal">Регистрация нового пользователя</h1>
        </div>

        <div class="form-label-group">
            <input class="form-control" placeholder="UserName" asp-for="UserName" required="">
            <label asp-for="UserName" for="inputEmail">UserName</label>
            <span asp-validation-for="UserName"></span>
        </div>

        <div class="form-label-group">
            <input asp-for="Password" type="password" id="inputPassword" class="form-control" placeholder="Password" required="">
            <label asp-for="Password" for="inputPassword">Password</label>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-label-group">
            <input asp-for="PasswordConfirm" type="password" id="inputPassword" class="form-control" placeholder="PasswordConfirm" required="">
            <label asp-for="PasswordConfirm" for="inputPassword">PasswordConfirm</label>
            <span asp-validation-for="PasswordConfirm"></span>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
    </form>

</div>
